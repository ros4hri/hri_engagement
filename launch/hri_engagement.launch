<launch>

    <arg name="semaphore_debug" default="False"/>
    <arg name="robot_head_frame" default="/camera_link" />
    <arg name="engagement_status_pb_rate" default="10" />

    <node pkg="hri_engagement" name="engagement_node" type="engagement_node" output="screen">
        <param name="robot_head_frame" value="$(arg robot_head_frame)"/>
        <param name="engagement_status_pb_rate" value="$(arg engagement_status_pb_rate)"/>
    </node>

</launch>
